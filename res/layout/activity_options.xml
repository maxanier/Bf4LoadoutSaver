<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<TableLayout
	    android:layout_width="fill_parent"
	    android:layout_height="377dp" >
	
	    
		<Button
	        android:id="@+id/button_reset_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="resetLogin"
	        android:text="@string/reset_login" />
	    <CheckBox
	        android:id="@+id/checkBox_analyse"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/option_analyse"
	        android:visibility="invisible" />
	    
	    <CheckBox
	        android:id="@+id/checkBox_screenlock"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/screenlock_option" />

	    <CheckBox
	        android:id="@+id/checkBox_mix_loadouts"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/allow_mix_loadouts" />

	    <Button
	        android:id="@+id/button_login_qr"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="save"
	        android:text="@string/finished" />

	    <Button
	        android:id="@+id/button3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="abort"
	        android:text="@string/abort" />

	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Medium Text"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:visibility="invisible" />

	    <Button
	        android:id="@+id/button_login_credentials"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/feedback" 
	        android:onClick="feedback"/>
	
	</TableLayout>
</ScrollView>