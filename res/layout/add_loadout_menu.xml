<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/loadoutname"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/loadoutNameHint" />
    
   <RadioGroup 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
	    <RadioButton android:id="@+id/all"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/wholeLoadout"/>
	    <RadioButton android:id="@+id/radio_infantry"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/infantryOnly"/>
	     <RadioButton android:id="@+id/radio_vehicle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/vehicleOnly"/>
	</RadioGroup>
</LinearLayout>
